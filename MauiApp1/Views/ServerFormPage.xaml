<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PhotoUploader.ServerFormPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="Nazwa serwera*" 
                   FontAttributes="Bold" />
            <Entry x:Name="serverNameEntry" 
                   Placeholder="np. Serwer g��wny" />

            <Label Text="Adres IP serwera" 
                   FontAttributes="Bold" />
            <Entry x:Name="serverIpEntry" 
                   Placeholder="192.168.1.100"
                   Keyboard="Url" />

            <Label Text="Nazwa share'a" 
                   FontAttributes="Bold" />
            <Entry x:Name="shareNameEntry" 
                   Placeholder="np. photos" />

            <Label Text="U�ytkownik SMB" 
                   FontAttributes="Bold" />
            <Entry x:Name="smbUserEntry" 
                   Placeholder="username" />

            <Label Text="Has�o SMB" 
                   FontAttributes="Bold" />
            <Entry x:Name="smbPassEntry" 
                   Placeholder="password"
                   IsPassword="True" />

            <Label Text="Domena SMB" 
                   FontAttributes="Bold" />
            <Entry x:Name="smbDomainEntry" 
                   Placeholder="WORKGROUP" />

            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Text="Anuluj" 
                        Clicked="OnCancelClicked"
                        BackgroundColor="LightGray"
                        TextColor="Black" />

                <Button Text="Zapisz" 
                        Clicked="OnSaveClicked"
                        Grid.Column="1"
                        BackgroundColor="#2196F3"
                        TextColor="White" />
            </Grid>

        </StackLayout>
    </ScrollView>

</ContentPage>