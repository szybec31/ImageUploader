<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PhotoUploader.ServersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Zarządzanie serwerami">

    <StackLayout>
        <Button Text="➕ Dodaj nowy serwer"
                Clicked="OnAddServerClicked"
                Margin="20,10"
                BackgroundColor="#4CAF50"
                TextColor="White" />

        <CollectionView x:Name="serversCollectionView"
                        SelectionChanged="OnServerSelected"
                        SelectionMode="Single">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15" 
                          BackgroundColor="White"
                          Margin="10,5">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Text="{Binding ServerName}"
                               FontAttributes="Bold"
                               FontSize="16" />

                        <Label Text="{Binding ServerIp}"
                               Grid.Row="1"
                               TextColor="Gray"
                               FontSize="14" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

        <Label x:Name="emptyLabel"
               Text="Brak zapisanych serwerów. Kliknij 'Dodaj nowy serwer' aby dodać pierwszy."
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Margin="20"
               TextColor="Gray"
               IsVisible="False" />
    </StackLayout>

</ContentPage>