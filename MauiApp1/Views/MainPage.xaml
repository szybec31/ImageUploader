<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PhotoUploader.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Serwer docelowy:" 
                   FontAttributes="Bold"
                   FontSize="16"/>

            <Label x:Name="ServerStatusLabel"
                   Text="Nie wybrano serwera"
                   TextColor="Red"/>

            <Button Text="⚙️ Zarządzaj serwerami"
                    Clicked="OnManageServersClicked"
                    BackgroundColor="#FF9800"
                    TextColor="White"/>

            <Label Text="Zdjęcie:" 
                   FontAttributes="Bold"
                   FontSize="16"
                   Margin="0,20,0,0"/>

            <Button Text="📷 Wybierz zdjęcie"
                    Clicked="OnPickPhotoClicked" />

            <Image x:Name="PreviewImage"
                   HeightRequest="250"
                   Aspect="AspectFit"
                   BackgroundColor="LightGray"/>

            <Button Text="📤 Wyślij na SMB"
                    x:Name="SendButton"
                    Clicked="OnSendPhotoClicked"
                    IsEnabled="False"
                    BackgroundColor="#4CAF50"
                    TextColor="White"/>

            <Label x:Name="StatusLabel"
                   Text="Status: "
                   LineBreakMode="WordWrap"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>